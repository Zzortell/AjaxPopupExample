<p>Login</p>
<form method="POST">
	<div class="container">
		<label><b>Username</b></label>
		<input type="text" placeholder="Enter Username" name="uname" required />

		<label><b>Password</b></label>
		<input type="password" placeholder="Enter Password" name="psw" required />

		<button type="submit">Login</button>
		<input type="checkbox" checked="checked">Remember me</input>
	</div>

	<div class="container" style="background-color:#f1f1f1">
		<button type="button" onclick="popup2.hide()">Cancel</button>
		<button class="ajax_popup_button" ajax-url="{{ path('register') }}">Register</button>
		<span class="psw">Forgot <a class="ajax_popup_button" ajax-url="{{ path('no_password') }}" href="#">password?</a></span>
	</div>
</form>
